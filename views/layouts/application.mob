{strip}
  <!DOCTYPE html>
  <html>
    <head>
      <meta http-equiv='content-type' content='text/html;charset=utf-8'/>
      <meta name='description' content='{$_WEBSITE.meta.description}'/>
      <meta name='dc.title' content='{$_WEBSITE.title}'/>
      {if $_WEBSITE.meta.keywords}
        <meta name='keywords' content='{$_WEBSITE.meta.keywords}'/>
      {/if}

      {* Provide more details for specific entry. *}
      {if isset($_REQUEST.id)}
        <meta property='og:description' content='{$_WEBSITE.meta.og.description}'/>
        <meta property='og:site_name' content='{$_WEBSITE.meta.og.site_name}'/>
        <meta property='og:title' content='{$_WEBSITE.meta.og.title}'/>
        <meta property='og:url' content='{$_WEBSITE.meta.og.url}'/>
        <meta itemprop='name' content='{$_WEBSITE.meta.og.title}'>
        <meta itemprop='description' content='{$_WEBSITE.meta.og.description}'>
      {/if}

      {* If we want to use a facebook plugin, provide tracking data. *}
      {if $_SYSTEM.facebook_plugin == true}
        <meta property='fb:admins' content='{$PLUGIN_FACEBOOK_ADMIN_ID}'/>
        <meta property='fb:app_id' content='{$PLUGIN_FACEBOOK_APP_ID}'/>
      {/if}

      <meta name='viewport' content='width=device-width, initial-scale=1' />
      <meta http-equiv='content-type' content='text/html;charset=utf-8'/>
      <link href='{$_PATH.css}/mobile/application{$_SYSTEM.compress_files_suffix}.css' rel='stylesheet' type='text/css' media='screen, projection'/>

      <script type='text/javascript' src='http://code.jquery.com/jquery-1.8.2{$_SYSTEM.compress_files_suffix}.js'></script>
      {* Fallback if CDN is not available. *}
      <script type="text/javascript">
        if (typeof jQuery == 'undefined')
          document.write(unescape("%3Cscript src='{$_PATH.js}/core/jquery.1.8.2{$_SYSTEM.compress_files_suffix}.js' type='text/javascript'%3E%3C/script%3E"));
      </script>

      <script type="text/javascript" src="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0{$_SYSTEM.compress_files_suffix}.js"></script>
      {* Fallback if CDN is not available. *}
      <script type="text/javascript">
        if (typeof jQuery.mobile == 'undefined')
          document.write(unescape("%3Cscript src='{$_PATH.js}/mobile/jquery.mobile.1.2.0-rc1{$_SYSTEM.compress_files_suffix}.js' type='text/javascript'%3E%3C/script%3E"));
      </script>

      {* Photoswipe *}
      <script type='text/javascript' src='{$_PATH.js}/mobile/klass{$_SYSTEM.compress_files_suffix}.js'></script>
      <script type='text/javascript' src='{$_PATH.js}/mobile/jquery.photoswipe-3.0.4{$_SYSTEM.compress_files_suffix}.js'></script>
      <title>{$_WEBSITE.title}</title>
    </head>
    <body>
      <div class='js-page-{$_REQUEST.controller}' data-role='page' data-theme='d' data-add-back-btn='true'>
        <div data-role='header'>
          <h1>{$_title_}</h1>
          {if $_SESSION.user.role == 0}
            <a href='/sessions/create' class='ui-btn-right'>
              {$lang.global.login}
            </a>
          {else}
            <a href='/sessions/destroy' class='ui-btn-right'>
              {$lang.global.logout}
            </a>
          {/if}
        </div><!-- /header -->
        <div data-role='navbar'>
          <ul>
            <li><a href='/blogs' {if $_REQUEST.controller == 'blogs'}class='ui-btn-active'{/if}>{$lang.global.blog}</a></li>
            <li><a href='/galleries' {if $_REQUEST.controller == 'galleries'}class='ui-btn-active'{/if}>{$lang.global.gallery}</a></li>
            <li><a href='/calendars' {if $_REQUEST.controller == 'calendars'}class='ui-btn-active'{/if}>{$lang.global.calendar}</a></li>
            <li><a href='/downloads' {if $_REQUEST.controller == 'downloads'}class='ui-btn-active'{/if}>{$lang.global.download}</a></li>
            <li><a href='/searches' {if $_REQUEST.controller == 'searches'}class='ui-btn-active' data-ajax='false'{/if}>{$lang.global.search}</a></li>
          </ul>
        </div><!-- /navbar -->
        <div data-role='content'>
          <section id='{$_REQUEST.controller}'>
            {if !empty($_FLASH.message)}
              <div id='js-flash_message'>
                <div class='alert alert-{$_FLASH.type}' id='js-flash_{$_FLASH.type}'>
                  <a class='close' href='#'>Ã—</a>
                  <h4 class='alert-heading'>{$_FLASH.headline}</h4>
                  <p>
                    {$_FLASH.message}
                  </p>
                </div>
              </div>
            {/if}
            {$_WEBSITE.content}
          </section>
        </div><!-- /content -->
        <div data-role='footer' data-position='fixed' class='ui-bar'>
          <div data-role='controlgroup' data-type='horizontal'>
            <a id='top' data-role='button' data-icon='arrow-u'>Top</a>
            <a href='?mobile=0' data-ajax='false'>{$lang.global.view.web}</a>
          </div>
        </div><!-- /footer -->
      </div><!-- /page -->

      <script type='text/javascript'>
        $('#top').live('click', function(e){
          $('body').clearQueue();
          $.mobile.silentScroll(0);
        });
      </script>
      <script type='text/javascript' src='{$_PATH.js}/core/scripts{$_SYSTEM.compress_files_suffix}.js'></script>
      <!-- plugin:analytics -->
      <!-- plugin:piwik -->
    </body>
  </html>
{/strip}