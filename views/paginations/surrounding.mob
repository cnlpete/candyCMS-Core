{strip}
  <div class='pagination center'>
    <div data-role='controlgroup' data-type='horizontal'>
      <a href='{$_PAGE.url_previous}' rel='prev' data-role='button'
        {if !$_PAGE.previous} class='ui-disabled'{/if}>&larr;</a>
      <a href='{$_PAGE.url_next}' rel='next' data-role='button'
        {if !$_PAGE.next || !$_PAGE.entries > $_PAGE.limit} class='ui-disabled'{/if}>&rarr;</a>
    </div>
  </div>
  <p class='center'>
    <a href='/{$_REQUEST.controller}.rss'
       data-role='button'
       data-inline='true'
       data-icon='rss'
       data-iconpos='notext'
       data-ajax='false'></a>
  </p>
{/strip}